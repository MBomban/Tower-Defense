<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="upgrade" controller="mygame.BreakState">
        <layer id="background" childLayout="center">
            <!--<image filename="Textures/UI/startScreenLogo.png"></image>-->
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel backgroundColor="#f008" id="panel_top" height="15%" width="75%" align="center" childLayout="center">
                <text text="Purchase Upgrades" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
            </panel>
            <panel backgroundColor="#0f08" id="panel_mid" height="75%" width="75%" align="center" childLayout="vertical">
                <text text="Here goes some text describing the game and the rules and stuff. Incidentally, the text is quite long and needs to wrap at the end of lines. ..." font="Interface/Fonts/Default.fnt" width="100%" height="10%" wrap="true" />
                <panel id="row1" height = "33.3%" width= "100%" align ="center" childLayout="horizontal">
                    <panel backgroundColor="#0f08"id="up_1" height="100%" width="33.3%" align="center" childLayout="center">
                        <text text="Anti-Virus $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_1)"/>
                        </image>
                    </panel>
                    <panel backgroundColor="#0f08" id="up_2" height="100%" width="33.3%" align="center" childLayout="center"> 
                        <text text="Spyware Sweeper $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_2)"/>
                        </image>
                    </panel>
                    <panel backgroundColor="#0f08" id="up_3" height="100%" width="33.3%" align="center" childLayout="center">                       
                        <text text="Firewall $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_3)"/>
                        </image>
                    </panel>
                </panel>
                <panel id="row2" height = "33.3%" width= "100%" align ="center" childLayout="horizontal">
                    <panel backgroundColor="#0f08" id="up_4" height="100%" width="33.3%" align="center" childLayout="center">  
                        <text text="Updated OS $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_4)"/>
                        </image>
                        
                    </panel>
                    <panel backgroundColor="#0f08" id="up_5" height="100%" width="33.3%" align="center" childLayout="center">                
                        <text text="Other Trap_1 $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_5)"/>
                        </image>
                        
                    </panel>
                    <panel backgroundColor="#0f08" id="up_6" height="100%" width="33.3%" align="center" childLayout="center"> 
                        <text text="Other Trap_2 $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_6)"/>
                        </image>
                        
                    </panel>
                </panel>
                <panel id="row3" height = "33.3%" width= "100%" align ="center" childLayout="horizontal">
                    <panel backgroundColor="#0f08" id="up_7" height="100%" width="33.3%" align="center" childLayout="center">                
                        <text text="Other Trap_3 $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_7)"/>
                        </image>
                        
                    </panel>
                    <panel backgroundColor="#0f08" id="up_8" height="100%" width="33.3%" align="center" childLayout="center">    
                        <text text="Other_Trap_4 $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom" visibleToMouse="true">
                            <interact onClick="getUpgradeSel(up_8)"/>
                        </image>
                        
                    </panel>
                    <panel backgroundColor="#0f08" id="up_9" height="100%" width="33.3%" align="center" childLayout="center">                   
                        <text text="Other Trap_5 $$$" font="Interface/Fonts/Default.fnt" width="100%" height="10%" valign= "top" wrap="true" />
                        <image filename="Textures/UpgradeThumbs/tower.jpg" height="85%" width="50%" valign="bottom">
                            <interact onClick="getUpgradeSel(up_9)"/>
                        </image>
                    </panel>
                </panel>
            </panel>
            <panel backgroundColor="#00f8" id="panel_bottom" height="10%" width="75%" align="center" childLayout="horizontal" >
                <panel backgroundColor="#0ff4" id="panel_bottom_left" height="50%" width="50%" valign="center" childLayout="center">  
                    <control name="button" label="Start" id="StartButton" align="center" valign="center" 
                             visibleToMouse="true" > 
                        <interact onClick="startGame()"/>
                    </control>
                </panel>
                <panel backgroundColor="#fff4"id="panel_bottom_right" height="50%" width="50%" valign="center" childLayout="center">  
                    <control name="button" label="Quit" id="QuitButton" align="center" valign="center" 
                             visibleToMouse="true" > 
                        <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>